
<div class="small-container">
    <h2 class="title">Product List</h2>
    <div class="row">
        {{#each products}}
            <div class="col-3">
                <a href="/products/{{_id}}"><img src="{{imageUrl}}" alt="{{name}}"></a>
                <h4>{{name}}</h4>
                <h5>{{author}}</h5>
                <a href="/products/{{id}}/edit" class="btn">Edit</a>
                <a href="/" class="btn">Delete</a>
            </div>
        {{/each}}
    </div>
</div>