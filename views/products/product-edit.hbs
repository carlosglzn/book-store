<h2>Update Product</h2>

<div class="row">

    <div class="col-md-6">

        <form action="/products/{{id}}/edit" method="POST" enctype="multipart/form-data">

            <div class="form-group">

                <label>Name:

                    <input type="text" name="name" class="form-control" value="{{name}}" />
                </label>

            </div>

            <div class="form-group">

                <label>Author:

                    <input type="text" name="author" class="form-control" value="{{author}}" />

                </label>

            </div>

            <div class="form-group">

                <label>Image

                    <input type="file" name="product-cover-image" class="form-control-file" />

                    <input type="text" name="existingImage" hidden value="{{imageUrl}}" />

                </label>

            </div>

            <button type="submit" class="btn btn-success">Save Changes</button>

        </form>

    </div>
    
</div>